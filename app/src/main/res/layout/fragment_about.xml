<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo with Glow -->
        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp"
            android:background="@drawable/glow_bg"
            android:padding="16dp" />

        <!-- App Title -->
        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About MoodyBinge"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- App Description (Left aligned for readability) -->
        <TextView
            android:id="@+id/aboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moody Binge is your go-to movie buddy! Just pick a genre and instantly discover random movie suggestions, all in one click. Explore links, ratings, and trailers, manage your favourites, and personalize your profile for a tailored binge experience."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="start" />

        <!-- Credits (Centered like movie credits) -->
        <TextView
            android:id="@+id/aboutCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backend by Sahil Mehta\nFrontend by Tanisha Das"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp" />

        <!-- Powered By -->
        <TextView
            android:id="@+id/aboutPowered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie data is powered by The Movie Database (TMDB) API."
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/aboutDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš  Disclaimer: This product uses the TMDB API but is not endorsed or certified by TMDB."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />


        <!-- Version Info -->
        <TextView
            android:id="@+id/aboutVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Version 1.0, 2025"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
